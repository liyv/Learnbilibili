<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="@dimen/default_grow_margin"
    android:padding="@dimen/default_general_margin">

    <ImageView
        android:id="@+id/image_live_partition_head"
        android:layout_width="@dimen/live_item_title_image_size"
        android:layout_height="@dimen/live_item_title_image_size" />

    <TextView
        android:id="@+id/tv_live_partition_head_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_tiny_padding"
        android:layout_marginTop="@dimen/default_tiny_margin"
        android:layout_toEndOf="@id/image_live_partition_head"
        android:gravity="center"
        android:text="直播分类名称"
        android:textColor="@color/font_normal"
        android:textSize="@dimen/default_small_text_size" />

    <TextView
        android:id="@+id/tv_live_partition_head_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/default_tiny_padding"
        android:drawableEnd="@drawable/ic_light_gray_arrow_right"
        android:drawablePadding="@dimen/default_tiny_margin"
        android:gravity="center"
        android:textColor="@color/font_normal"
        android:textSize="@dimen/default_small_text_size" />
</RelativeLayout>